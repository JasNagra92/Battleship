function getRandomInt(max) {
  return Math.floor(Math.random() * max);
}
function checkHorizontalValid(length, y) {
  if (y + length < 11) {
    return true;
  }
}
function checkVerticalValid(length, x) {
  if (x + length < 11) {
    return true;
  }
}
function checkHorizontalCollision(length, x, y) {
  for (let i = y; i < y + length; i += 1) {
    const shipSquare = document.querySelector(
      `[data-x-Coordinate="${x}"][data-y-Coordinate="${i}"]`
    );
    if (shipSquare.classList.contains('ship')) {
      return false;
    }
  }
  return true;
}
function checkVerticalCollision(length, x, y) {
  for (let i = x; i < x + length; i += 1) {
    const shipSquare = document.querySelector(
      `[data-x-Coordinate="${i}"][data-y-Coordinate="${y}"]`
    );
    if (shipSquare.classList.contains('ship')) {
      return false;
    }
  }
  return true;
}
export {
  getRandomInt,
  checkHorizontalValid,
  checkVerticalValid,
  checkHorizontalCollision,
  checkVerticalCollision,
};
