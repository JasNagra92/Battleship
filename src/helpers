function getRandomInt(max) {
  return Math.floor(Math.random() * max);
}
function checkHorizontalValid(length, y) {
  if (y + length < 11) {
    return true;
  }
}
function checkVerticalValid(length, x) {
  if (x + length < 11) {
    return true;
  }
}
function checkHorizontalCollision(length, x, y) {
  for (let i = y; i < y + length; i += 1) {
    const shipSquare = document.querySelector(
      `[data-x-Coordinate="${x}"][data-y-Coordinate="${i}"]`
    );
    if (shipSquare.classList.contains('ship')) {
      return false;
    }
  }
  return true;
}
function checkVerticalCollision(length, x, y) {
  for (let i = x; i < x + length; i += 1) {
    const shipSquare = document.querySelector(
      `[data-x-Coordinate="${i}"][data-y-Coordinate="${y}"]`
    );
    if (shipSquare.classList.contains('ship')) {
      return false;
    }
  }
  return true;
}
function randomHorizontalCoordinates(length, currentShipCoordinates) {
  let repeat = true;
  let xCoordinate = getRandomInt(9);
  let yCoordinate = getRandomInt((10 - length));
  if (currentShipCoordinates.length !== 0) {
    while (repeat) {
      // eslint-disable-next-line no-loop-func
      currentShipCoordinates.forEach((coordinates) => {
        if (coordinates[0][0] === xCoordinate || coordinates[0][1] === yCoordinate) {
          xCoordinate = getRandomInt(9);
          yCoordinate = getRandomInt((10 - length));
          repeat = true;
          // eslint-disable-next-line no-trailing-spaces
        } else {
          repeat = false;
        }
      });
    }
  }
  const coordinates = [];
  for (let i = yCoordinate; i < yCoordinate + length; i += 1) {
    coordinates.push([xCoordinate, i]);
  }
  return coordinates;
}
function randomVerticalCoordinates(length, currentShipCoordinates) {
  let repeat = true;
  let xCoordinate = getRandomInt((10 - length));
  let yCoordinate = getRandomInt(9);
  if (currentShipCoordinates.length !== 0) {
    while (repeat) {
      // eslint-disable-next-line no-loop-func
      currentShipCoordinates.forEach((coordinates) => {
        if (coordinates[0][0] === xCoordinate || coordinates[0][1] === yCoordinate) {
          xCoordinate = getRandomInt((10 - length));
          yCoordinate = getRandomInt(9);
          repeat = true;
          // eslint-disable-next-line no-trailing-spaces
        } else {
          repeat = false;
        }
      });
    }
  }
  const coordinates = [];
  for (let i = xCoordinate; i < xCoordinate + length; i += 1) {
    coordinates.push([i, yCoordinate]);
  }
  return coordinates;
}
export {
  getRandomInt,
  checkHorizontalValid,
  checkVerticalValid,
  checkHorizontalCollision,
  checkVerticalCollision,
  randomHorizontalCoordinates,
  randomVerticalCoordinates,
};
